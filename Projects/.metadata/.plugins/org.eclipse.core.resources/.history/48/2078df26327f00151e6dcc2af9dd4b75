#ifndef BUNNYLIST_H_
#define BUNNYLIST_H_
class BunnyList {
	public:
	    BunnyList() {
		    head = NULL;
		    tail = NULL;
	    }
	    void addBunny(Bunny bunny) {
	    	if (head == NULL) {
		    	head = &bunny;
		    	std::cout << head->getName();
		    } else if(tail == NULL) {
		    	head->setNext(bunny);
		    	tail = head->getNext();
		    } else {
			    tail->setNext(bunny);
			    tail = &bunny;
		    }
	    }
	    void killOldBunny(Bunny bunny) {
		    if (&bunny == head) {
			    head = head->getNext();
		    }
	    }
	    void searchForRabbitLadies() {
		    Bunny* hornyMale = head;
		    while (hornyMale->getNext() != NULL) {
			    if (hornyMale->getSex() == 0 && hornyMale->getAge() > 1) {
			    	Bunny* sexyFemale = head;
			    	while (sexyFemale->getNext() != NULL) {
				    	if (sexyFemale->getSex() == 1 && sexyFemale->getAge() > 1) {
					    	Bunny child;
						    child.setColour(sexyFemale->getColour());
					    }
				    }
			    }
		    }
	    }
	    Bunny* getHead() {
	    	return head;
	    }
	    Bunny* getTail() {
	    	return tail;
	    }
	private:
	    Bunny *head;
	    Bunny *tail;
};




#endif /* BUNNYLIST_H_ */
