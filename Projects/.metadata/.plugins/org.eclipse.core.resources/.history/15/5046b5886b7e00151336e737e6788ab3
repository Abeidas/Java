#ifndef BUNNY_H_
#define BUNNY_H_


class Bunny {
	public:
	    Bunny() {
	    	setSex();
	    }

	void setSex() {
		sex = static_cast<Sex>(rand() % 2);
	}
	Sex getSex() {
		return sex;
	}
	private:
	    Sex sex;
	    Colour colour;
	    NAME name;
	    Bunny *next;
	    Bunny *mother;
};



#endif /* BUNNY_H_ */
