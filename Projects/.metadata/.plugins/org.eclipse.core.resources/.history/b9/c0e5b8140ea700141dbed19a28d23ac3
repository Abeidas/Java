package edu.kit.informatik;

/**
 * 
 * @author Ahmad Beidas
 * @version 1.0
 */
public class Interactive {
    public static void main(String[] args) throws SearchInquiryException {
        Search compound = new Search();
        Book book = new Book("java", "ahmad", "2015");
        double tolerance = Double.parseDouble(args[0]);
        String search = "";
        while (true) {
            search = Terminal.readLine();
            if (search.substring(0, 4).equals("quit")) {
                System.out.println("ahmad");

            }
            else if (search.substring(0, 6).equals("search")) {
                System.out.println("ahmad");
                String phrAse = search.toLowerCase().substring(search.indexOf(" "), search.length()).replace(" ", "");
                valid(phrAse);
                proofer(phrAse);
                Terminal.printLine(phrAse + "," + compound.tolerance(tolerance, phrAse, book));
            }

        }
    }

    public static boolean valid(String p) throws SearchInquiryException {
        int a = 0;
        int b = 0;
        int c = 0;
        int d = 0;
        while (p.contains(")") || p.contains("=") || p.contains(",") || p.contains("And(") || p.contains("OR(")) {
            if (p.contains("OR(")) {
                ++a;
                p = p.replaceFirst("OR\\(", "");
            }
            if (p.contains("AND(")) {
                ++a;
                p = p.replaceFirst("AND\\(", "");
            }
            if (p.contains(")")) {
                ++b;
                p = p.replaceFirst("\\)", "");
            }
            if (p.contains("=")) {
                ++c;
                p = p.replaceFirst("=", "");
            }
            if (p.contains(",")) {
                ++d;
                p = p.replaceFirst("\\,", "");
            }
        }
        if (a == b && b == c - 1 && c - 1 == d) {
            return true;
        } else {
            throw new SearchInquiryException("Error, roo7 insiref");
        }
    }

    public static void proofer(String p) throws SearchInquiryException {
        if (!p.matches("[a-zA-Z0-9_-=()]+)")) {
            throw new SearchInquiryException("Phrase contains inacceptable characters!");
        } else if (!p.substring(0, p.indexOf(" ")).equals("search") && !p.substring(0, p.indexOf(" ")).equals("quit")) {
            throw new SearchInquiryException("Invalid command!");
        }
    }
}
